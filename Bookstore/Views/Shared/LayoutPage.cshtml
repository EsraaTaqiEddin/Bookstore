@using Microsoft.AspNetCore.Identity;
@using Bookstore.data;
@inject SignInManager<ApplicationUser> signInManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Bookstore 101 Admin</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">


    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    @RenderSection("Head", false)
</head>

<body>


    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar" style="background-color: black !important; color: white;">
                <a class="navbar-brand mx-4 mb-3">
                    <h3 style="color:white;"><i class="fa fa-hashtag me-2" style="color:white"></i>Bookstore 101</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">

                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0" style="color:white;">@User.Identity.Name</h6>
                        <span>Admin</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <div class="nav-item">
                        <a asp-action="Index" asp-controller="Category" class="nav-link"><i class="fa fa-th me-2"></i>Category</a>
                    </div>
                    <a asp-action="Index" asp-controller="Book" class="nav-item nav-link"><i class="fa fa-book me-2"></i>Books</a>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-cogs me-2" style="color:black;"></i>Authors</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a style="color:white !important" asp-action="Index" asp-controller="Author" class="dropdown-item" onMouseOver="this.style.color='#000000'"><i class="fa fa-users me-2" style="color:white;" onMouseOver="this.style.color='#000000'"></i>Authors</a>
                            <a style="color:white !important" asp-action="Index" asp-controller="Country" class="dropdown-item" onMouseOver="this.style.color='#000000'"><i class="fas fa-globe-africa me-2" style="color:white;" onMouseOver="this.style.color='#000000'"></i>Countries</a>
                        </div>
                    </div>


                    <div class="nav-item dropdown" style="margin-top:40px;">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="far fa-file-alt me-2"></i>Account</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a style="color:white !important" asp-action="Index" asp-controller="Account" class="dropdown-item" onMouseOver="this.style.color='#000000'"><i class="fa fa-users-friend me-2" style="color:white;"></i>Create Account</a>
                            <a style="color:white !important" asp-action="NewRole" asp-controller="Account" class="dropdown-item" onMouseOver="this.style.color='#000000'"><i class="fa fa-users-friend me-2" style="color:white;"></i>New Role</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand sticky-top px-4 py-0" style="background-color: black;">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fa fa-chart-bar me-lg-2"></i>
                            <span class="d-none d-lg-inline-flex">@User.Identity.Name</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end border-0 rounded-0 rounded-bottom m-0" style="background-color:white;">
                            <a asp-action="SignOut" asp-controller="Account" class="dropdown-item" style="color:black !important;">Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->

            <div class="col-12 " style="margin-top: 50px;">
                @RenderSection("Body")

            </div>


        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-dark btn-lg-square back-to-top"><i class="bi bi-arrow-up" style="color: white;"></i></a>
    </div>



    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>

</body>

</html>